<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Softwarelll" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">#2B2B2B</item>

        <item name="buttonStyle">@style/timboButton</item>
    </style>

    <style name="appTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/h1</item>

    </style>

    <style name="thumbnail" parent="Softwarelll">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">1dp</item>
    </style>

    <!--style name="timboButton" parent="Base.Widget.AppCompat.Button"-->
    <!--style name="timboButton" parent="Base.Widget.AppCompat.Button.Colored"-->
    <style name="timboButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/secondaryDisabled</item>
    </style>

    <style name="timboTextStyle">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar" />

    <style name="money">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">Courier New</item>
    </style>

    <style name="timboText" parent="Widget.AppCompat.AutoCompleteTextView">

    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#0B0B0B</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#156018</item>
    </style>

</resources>